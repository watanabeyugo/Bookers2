<h2>Book detail</h2>

<div class="row">
  <table class="table">
    <tbody>
      <tr>
        <th>
          <div>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'30x30' %>
              <p><%= @book.user.name %></p>
            <% end %>
          </div>
        </th>
        <th><%= @book.title %></th>
        <th><%= @book.body %></th>
        <% if @book.user == current_user %>
          <th><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success' %></th>
          <th><%= link_to 'Destroy', book_path(@book),  class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: "削除しますか？"} %></th>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>