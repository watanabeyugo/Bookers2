<h1>Books</h1>
<table class="table table-hover table-inverse">
  <thead>
    <th>
    </th>
    <th>Title
    </th>
    <th>Opinion
    </th>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <th>
        <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg", size:'30x30' %>
        <% end %>
      </th>
      <th><%= link_to book.title, book_path(book) %></th>
      <th><%= book.body %></th>
    </th>
    <% end %>
  </tbody>
</table>
